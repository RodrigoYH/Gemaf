            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="B-15"/>
            <ComboBoxItem Content="C"/>
            <ComboBoxItem Content="D"/>
        </ComboBox>
        <ComboBox x:Name="cmbCategoria" HorizontalAlignment="Left" Height="31" Margin="266,345,0,0" VerticalAlignment="Top" Width="271" FontSize="16" Background="White" BorderBrush="Black">

        </ComboBox>
        <ComboBox x:Name="cmbSeccion" HorizontalAlignment="Left" Height="31" Margin="266,405,0,0" VerticalAlignment="Top" Width="289" FontSize="16" Background="White" BorderBrush="Black">

        </ComboBox>
        <ComboBox x:Name="cmbLocacion" HorizontalAlignment="Left" Height="31" Margin="266,464,0,0" VerticalAlignment="Top" Width="324" FontSize="16" Background="White" BorderBrush="Black">

        </ComboBox>
        <TextBox x:Name="txtAutorDirector" HorizontalAlignment="Left" Height="29" Margin="286,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="338" FontSize="18" Background="White" BorderBrush="Black"/>
        <Button x:Name="btnGuardar" Content="Enregistrer les modifications" HorizontalAlignment="Left" Height="67" Margin="247,527,0,0" VerticalAlignment="Top" Width="269" FontSize="18" Click="BtnGuardar_Click_1" FontWeight="Bold" Background="#FFB40000" Foreground="White" Cursor="Hand" BorderBrush="Black"/>
        <DockPanel HorizontalAlignment="Left" Height="615" LastChildFill="False" VerticalAlignment="Top" Width="109">
            <DockPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF650000"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </DockPanel.Background>
        </DockPanel>
    </Grid>
</Window>
