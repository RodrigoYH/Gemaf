        <Label x:Name="label" Content="ID d'article:" HorizontalAlignment="Left" Margin="166,22,0,0" VerticalAlignment="Top" FontSize="18" FontStyle="Italic" FontWeight="Bold"/>
        <Label x:Name="label_Copy" Content="Titre:" HorizontalAlignment="Left" Margin="130,150,0,0" VerticalAlignment="Top" FontSize="18" FontStyle="Italic" FontWeight="Bold"/>
        <Label x:Name="label_Copy1" Content="Auteur/Directeur:" HorizontalAlignment="Left" Margin="120,211,0,0" VerticalAlignment="Top" FontSize="18" FontStyle="Italic" FontWeight="Bold"/>
        <Label x:Name="label_Copy2" Content="Classification:" HorizontalAlignment="Left" Margin="130,276,0,0" VerticalAlignment="Top" FontSize="18" FontStyle="Italic" FontWeight="Bold"/>
        <Label x:Name="label_Copy3" HorizontalAlignment="Left" Margin="114,311,0,0" VerticalAlignment="Top" FontSize="18" FontStyle="Italic"/>
        <Label x:Name="label_Copy4" Content="Catégorie:" HorizontalAlignment="Left" Margin="161,342,0,0" VerticalAlignment="Top" FontSize="18" FontStyle="Italic" FontWeight="Bold"/>
        <Label x:Name="label_Copy5" Content="Section:" HorizontalAlignment="Left" Margin="181,402,0,0" VerticalAlignment="Top" FontSize="18" FontStyle="Italic" FontWeight="Bold"/>
        <Label x:Name="label_Copy6" Content="Location:" HorizontalAlignment="Left" Margin="169,464,0,0" VerticalAlignment="Top" FontSize="18" FontStyle="Italic" FontWeight="Bold"/>
        <TextBox x:Name="txtID" HorizontalAlignment="Left" Height="29" Margin="286,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206" FontSize="18" Background="White" BorderBrush="Black" IsReadOnly="True"/>
        <TextBox x:Name="txtTitulo" HorizontalAlignment="Left" Height="29" Margin="192,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="432" FontSize="18" Background="White" BorderBrush="Black"/>
        <Label x:Name="label_Copy7" Content="Type:" HorizontalAlignment="Left" Margin="223,61,0,0" VerticalAlignment="Top" FontSize="18" FontStyle="Italic" FontWeight="Bold"/>
        <Label x:Name="label_Copy8" HorizontalAlignment="Left" Margin="129,99,0,0" VerticalAlignment="Top" FontSize="18" FontStyle="Italic"/>
        <TextBox x:Name="txtTipo" HorizontalAlignment="Left" Height="29" Margin="286,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129" FontSize="18" Background="White" BorderBrush="Black" IsReadOnly="True" TextChanged="TxtTipo_TextChanged"/>
